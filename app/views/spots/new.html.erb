<div class="main">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with model: @spot , local: true do |form| %>
      <div class="form">
        <div class="form-body">
          <% @spot.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>
          <div class="field">
            <%= form.rich_text_area :content %>
          </div>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
</div>